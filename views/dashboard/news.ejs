    <script>
        $(document).ready(() => {
            $('.openUserMenu').click(() => {
                let  menu = $('.userMenu');
                if(menu.hasClass("hidden")){
                    menu.removeClass("hidden");
                }else{
                    menu.addClass("hidden");
                }

            });

            $('.openNewsModal').click(() => {
                let newsModal = $('.newsModal');
                if(newsModal.hasClass("hidden")){
                    newsModal.removeClass("hidden");
                } else{
                    newsModal.addClass("hidden");
                }
            });
            $('.deleteButton').on("click",(event) => {
                var newsid = $(event.currentTarget).data("newsid");
                $.ajax({
                    method:"POST",
                    url:"/dashboard/news/delete/"+newsid,
                    error: (response) => {
                        $('.errorMessage').fadeIn();
                        $('.errorMessage .em-text').html(response.message);
                        setTimeout(() => {
                            $('.errorMessage').fadeOut();
                            $('.errorMessage .em-text').html();
                        },4000);
                    }
                }).done((response) => {
                    $('.successMessage').fadeIn();
                    $('.successMessage .sm-text').html(response.message);
                    setTimeout(() => {
                        $('.successMessage').fadeOut();
                        $('.successMessage .sm-text').html();
                        window.location.reload;
                    },4000);
                })
            });
        });
    </script>
    

